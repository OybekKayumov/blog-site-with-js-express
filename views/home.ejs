<%- include('./partials/header.ejs') -%>

  <h1>Home</h1>
  <p><%= startingContent %></p>  

  <% posts.forEach((post) => { %>
    <h1><%= post.title %></h1>
    <p>
      <%= post.content.substring(0, 100) + "..." %>
      <a href="/posts/<%= post.title %>">Read more</a>
    </p>
  <% }) %>

